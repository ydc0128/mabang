<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <RelativeLayout
        android:id="@+id/meiyoushuju"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            >
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/meiyoushuju"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="您还没有订单"
            />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/chuangkou"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/xichegong_xinxi"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">
            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/iv_yangong_touxiang"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/morentouxiang"
                app:civ_border_color="#ffffff"
                app:civ_border_width="1dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mshifu"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_horizontal"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1.5"
            >
    <LinearLayout
        android:id="@+id/ll_dingdanhao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号:"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/tv_dingdanhao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1111"
            android:textSize="16sp"
            android:textColor="@color/common_red"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>
<LinearLayout
    android:id="@+id/ll_zhuangtai"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单状态:"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/tv_dingdan_zhuangtai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1111"
        android:textSize="16sp"
        android:textColor="@color/common_red"
        android:layout_marginLeft="10dp"
        />
</LinearLayout>

    <LinearLayout
        android:id="@+id/ll_xiadanshijian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="下单时间"
        android:layout_marginLeft="10dp"
        />
        <TextView
            android:id="@+id/tv_xiadanshijian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="1111"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_chepai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="车牌："
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:id="@+id/tv_chepai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="1111"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>
</LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp">
    <Button
        android:id="@+id/bt_dadianhua"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="打电话"
        android:layout_marginLeft="10dp"
        android:background="@drawable/btn_blue_bg"/>
    <Button
        android:id="@+id/bt_quxiao"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="取消订单"
        android:layout_marginLeft="10dp"
        android:background="@drawable/btn_blue_bg"/>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>