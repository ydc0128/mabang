<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/titlebg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_gerenziliao_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/back" />


        <TextView
            android:id="@+id/tv_gerenziliao_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/tv_gerenziliao_list_title"
            android:textColor="#ffffff"
            android:textSize="20sp" />


        <Button
            android:id="@+id/btn_gerenziliao_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:text="@string/btn_mycar_bianji"
            android:textColor="#ffffff"
            android:textSize="14sp" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_gerenziliao_touxiang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ziliaobeijing"
        android:clickable="false"
        android:orientation="horizontal"
        android:gravity="center"
        >




        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cv_gerenziliao_touxiang"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"

            app:civ_border_color="#ffffff"
            app:civ_border_width="2dp"
            android:clickable="false"
            android:layout_marginBottom="10dp"
            android:background="@drawable/touxiang"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:clickable="false"
        android:background="@drawable/fengexian" />
    <LinearLayout
        android:id="@+id/ll_gerenziliao_xingming"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:clickable="false"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:text="@string/tv_xingming"
            android:clickable="false"
            android:textColor="#656565"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/tv_gerenziliao_xingming"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textColor="#989898"
            android:clickable="false"
            android:textSize="18sp"
            android:background="@null"/>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:clickable="false"
        android:background="@drawable/fengexian" />

    <LinearLayout
        android:id="@+id/ll_gerenziliao_xingbie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:clickable="false"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/tv_xingbie"
            android:clickable="false"
            android:textColor="#656565"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>
        <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:clickable="false"
        android:layout_weight="1" />

        <RadioButton
            android:id="@+id/rb_myziliao_nan"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="男"
            android:textSize="16sp"
            android:textColor="@color/ziti_hui"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <RadioButton
            android:id="@+id/rb_myziliao_nv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="女"
            android:textSize="16sp"
            android:textColor="@color/ziti_hui"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:clickable="false"
        android:background="@drawable/fengexian" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:clickable="false"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:text="@string/tv_lianxifangshi"
            android:textColor="#656565"
            android:clickable="false"
            android:textSize="18sp" />


        <!--<View-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:clickable="false"-->
            <!--android:layout_weight="1" />-->


        <TextView
            android:id="@+id/tv_gerenziliao_lianxifangshi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:clickable="false"
            android:layout_marginLeft="15dp"
            android:textColor="#989898"
            android:textSize="18sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:clickable="false"
        android:background="@drawable/fengexian" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#ffffff">


        <Button
            android:id="@+id/btn_gerenziliao_baocun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/titlebg"
            android:text="@string/tv_baocun"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:visibility="invisible" />


    </RelativeLayout>


</LinearLayout>
